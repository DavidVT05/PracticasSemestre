<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaPersonal.CrearContactoPage"
             Title="Crear Contacto">
    <ScrollView>
        <FlexLayout Direction="Column" AlignItems="Start"
                    JustifyContent="SpaceEvenly" Padding="20">
            <Entry Placeholder="Nombre" WidthRequest="250" />
            <Entry Placeholder="Teléfono" WidthRequest="250" />
            <Entry Placeholder="Correo" WidthRequest="250" />
            <Entry Placeholder="Dirección" WidthRequest="250" />
            <Button Text="Guardar Contacto" WidthRequest="250" BackgroundColor="LightSkyBlue" />
        </FlexLayout>
    </ScrollView>
</ContentPage>
    