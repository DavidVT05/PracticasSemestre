<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaPersonal.ConfiguracionPage"
             Title="ConfiguraciÃ³n"
             BackgroundColor="#F4F4F4">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

            <Frame BackgroundColor="White" Padding="20" BorderColor="#CCCCCC" HasShadow="True">
                <VerticalStackLayout Spacing="20">

                    <Label Text="Tema"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#333333" />

                    <HorizontalStackLayout>
                        <Label Text="Claro"
                               FontSize="16"
                               VerticalOptions="Center"
                               TextColor="#555555" />
                        <Switch x:Name="temaSwitch" Toggled="OnTemaToggled" HorizontalOptions="CenterAndExpand" />
                        <Label Text="Oscuro"
                               FontSize="16"
                               VerticalOptions="Center"
                               TextColor="#555555" />
                    </HorizontalStackLayout>

                    <Label Text="Idioma"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#333333" />

                    <Picker x:Name="idiomaPicker"
                            SelectedIndexChanged="OnIdiomaChanged"
                            Title="Seleccionar idioma"
                            TextColor="#333333"
                            BackgroundColor="#F9F9F9"
                            FontSize="16">
                        <Picker.Items>
                            <x:String>es</x:String>
                            <x:String>en</x:String>
                        </Picker.Items>
                    </Picker>

                    <Label x:Name="lblEstado"
                           Text="Cambios guardados"
                           IsVisible="False"
                           TextColor="DeepSkyBlue"
                           FontAttributes="Italic"
                           FontSize="14"
                           HorizontalOptions="Center" />

                    <Button Text="Cerrar sesiÃ³n"
                            Clicked="IrCerrar"
                            BackgroundColor="#0078D4"
                            TextColor="White"
                            FontAttributes="Bold"
                            HeightRequest="44"
                            HorizontalOptions="Center" />

                    <Button Text="Eliminar cuenta"
                            Clicked="OnEliminarUsuarioClicked"
                            BackgroundColor="#C0392B"
                            TextColor="White"
                            FontAttributes="Bold"
                            HeightRequest="44"
                            HorizontalOptions="Center" />

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
