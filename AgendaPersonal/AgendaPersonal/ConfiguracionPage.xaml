<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaPersonal.ConfiguracionPage"
             Title="ConfiguracionPage">
    <VerticalStackLayout>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label Text="Configuración" FontSize="Large" HorizontalOptions="Center" />

            <Label Text="Activar Notificaciones" />
            <Switch HorizontalOptions="Start" />

            <Button Text="Cambiar Tema" Clicked="Cambiar" BackgroundColor="LightSkyBlue"
                    HorizontalOptions="Center" />

            <Button Text="Cerrar sesión" Clicked="IrCerrar" BackgroundColor="LightSkyBlue"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>