<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaPersonal.MainPage"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             Shell.NavBarIsVisible="False"
             Title="MainPage"
             BackgroundColor="#F4F4F4">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25">

            <Label Text="Menú Principal"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#2C3E50"
                   HorizontalOptions="Center" />

            <Button Text="Lista de Contactos"
                    Clicked="IrListaContactos"
                    BackgroundColor="#0078D4"
                    TextColor="White"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="0"
                    HorizontalOptions="FillAndExpand" />

            <Button Text="Crear Nuevo Contacto"
                    Clicked="IrCrearContacto"
                    BackgroundColor="#0078D4"
                    TextColor="White"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="0"
                    HorizontalOptions="FillAndExpand" />

            <Button Text="Configuración"
                    Clicked="IrConfiguracion"
                    BackgroundColor="#0078D4"
                    TextColor="White"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="0"
                    HorizontalOptions="FillAndExpand" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
